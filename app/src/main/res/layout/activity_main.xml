            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#9C27B0"
            android:layout_margin="1.5dp"/>
        <TextView
            android:id="@+id/num6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#9C27B0"
            android:layout_margin="1.5dp"/>
        <TextView
            android:id="@+id/num7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="7"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#9C27B0"
            android:layout_margin="1.5dp"/>
